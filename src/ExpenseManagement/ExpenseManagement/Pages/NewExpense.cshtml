@page
@model ExpenseManagement.Pages.NewExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-bar">
        <div class="error-title">⚠️ Error</div>
        <div>@Model.ErrorMessage</div>
    </div>
}

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Add Expense</h4>
                
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Amount (£)</label>
                        <input type="number" step="0.01" min="0" class="form-control" asp-for="Expense.Amount" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" asp-for="Expense.ExpenseDate" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" asp-for="Expense.CategoryId" required>
                            <option value="">Select Category</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">User</label>
                        <select class="form-select" asp-for="Expense.UserId" required>
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.UserId">@user.UserName</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="Expense.Description" rows="3"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
