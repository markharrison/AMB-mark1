@page
@model ExpenseManagement.Pages.ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-bar">
        <div class="error-title">⚠️ Database Connection Issue</div>
        <div>@Model.ErrorMessage</div>
        <div class="mt-2 small">Displaying sample data. Please check your database connection.</div>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Expenses</h2>
    <a asp-page="/NewExpense" class="btn btn-primary">
        + New Expense
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Filter</label>
                <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Search description...">
            </div>
            <div class="col-md-2">
                <label class="form-label">Category</label>
                <select class="form-select" name="categoryId">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId" selected="@(Model.CategoryId == category.CategoryId)">@category.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select class="form-select" name="statusId">
                    <option value="">All Statuses</option>
                    @foreach (var status in Model.Statuses)
                    {
                        <option value="@status.StatusId" selected="@(Model.StatusId == status.StatusId)">@status.StatusName</option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Employee</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                            <td>@expense.UserName</td>
                            <td>@expense.CategoryName</td>
                            <td>£@expense.AmountGBP.ToString("N2")</td>
                            <td>
                                <span class="badge-status badge-@expense.StatusName.ToLower()">
                                    @expense.StatusName
                                </span>
                            </td>
                            <td>@expense.Description</td>
                            <td>
                                @if (expense.StatusName == "Draft")
                                {
                                    <form method="post" asp-page-handler="Submit" asp-route-id="@expense.ExpenseId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                                    </form>
                                }
                                <form method="post" asp-page-handler="Delete" asp-route-id="@expense.ExpenseId" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
